apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  labels:
    app: ccf-uaa
    version: latest
  name: ccf-uaa
  namespace: ccf
spec:
  replicas: 1
  selector:
    matchLabels:
      app: ccf-uaa
      version: latest
  template:
    metadata:
      labels:
        app: ccf-uaa
        version: latest
    spec:
      containers:
      - env:
        - name: CONFD_BACKEND
          value: consul
        - name: CONFD_NODE
          value: ccf_consul_srv.ccf:8500
        image: shippedrepos-docker-sitd.bintray.io/sitd/uaa
        name: uaa
        livenessProbe:
          exec:
            command: ["/bin/sh", "-c", "!(/var/vcap/bosh/bin/monit summary | tail -n +3 | grep -v -E '(running|accessible)$' )"]
          initialDelaySeconds: 20
          timeoutSeconds: 10
        resources:
          limits:
            cpu: 100.0m
            memory: 1024Mi
        securityContext:
          privileged: true
        volumeMounts:
        - mountPath: /lib/modules
          name: lib-modules
          readOnly: true
      volumes:
      - hostPath:
          path: /lib/modules
        name: lib-modules
